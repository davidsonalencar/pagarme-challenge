{
  "plugins": [
    "angular"
  ],
  "env": {
    "browser": true,
    "jasmine": true
  },
  "extends": "eslint:recommended",
  "rules": {

    //
    //-- Rules for JS (http://eslint.org/docs/rules/)

    // Possible Errors
    "comma-dangle": [2, "only-multiline"],
    "no-console": 2,
    "no-extra-boolean-cast": 0,

    // Best Practices
    "consistent-return": 2,
    "no-alert": 2,

    // Variables
    "no-undef": 2,

    // Stylistic Issues
    "no-underscore-dangle": 0,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "indent": [2, 4, {"SwitchCase": 1}],

    //
    //-- Rules for AngularJS (https://www.npmjs.com/package/eslint-plugin-angular#rules)

    // Possible Errors
    "angular/module-getter": 2,
    "angular/module-setter": 2,
    "angular/no-private-call": 2,

    // Best Practices
    "angular/component-limit": 0,
    "angular/controller-as-route": 2,
    "angular/controller-as-vm": [2,"ctrl"],
    "angular/controller-as": 2,
    "angular/deferred": 2,
    "angular/di-unused": 2,
    "angular/directive-restrict": 2,
    "angular/empty-controller": 2,
    "angular/no-controller": 0,
    "angular/no-inline-template": 2,
    "angular/no-run-logic": 0,
    "angular/no-services": [2,["$http","$resource"],["controller"]],
    "angular/on-watch": 2,

    // Deprecated Angular Features
    "angular/no-cookiestore": 2,
    "angular/no-directive-replace": 0,
    "angular/no-http-callback": 2,

    // Naming
    "angular/controller-name": [2,"/[A-Z].*Controller/"],
    "angular/directive-name": 2,
    "angular/file-name": [2,{"typeSeparator":"dot","nameStyle":"dash","ignoreTypeSuffix":true}],
    "angular/filter-name": 2,
    "angular/module-name": 0,
    "angular/service-name": 0,

    // Conventions
    "angular/di-order": 0,
    "angular/di": [2, "function"],
    "angular/module-dependency-order": 0,
    "angular/dumb-inject": 2,
    "angular/function-type": [2,"named"],
    "angular/no-service-method": 2,
    "angular/one-dependency-per-line": 0,
    "angular/rest-service": [2,"$resource"],
    "angular/watchers-execution": 0,
    "angular/angularelement": 0,
    "angular/definedundefined": 2,
    "angular/document-service": 2,
    "angular/foreach": 2,
    "angular/interval-service": 2,
    "angular/json-functions": 2,
    "angular/log": 2,
    "angular/no-angular-mock": 2,
    "angular/no-jquery-angularelement": 2,
    "angular/timeout-service": 2,
    "angular/typecheck-array": 2,
    "angular/typecheck-date": 2,
    "angular/typecheck-function": 2,
    "angular/typecheck-number": 2,
    "angular/typecheck-object": 2,
    "angular/typecheck-string": 2,
    "angular/window-service": 2,
  },
  "globals": {
    "angular": true,
    "$": true,
    "kendo": true,
    "UIkit": true,
    "MG": true,
    "ApplicationConfiguration": true,
    "d3": true,
    "CountUp": true,
    "t": true,
    "RRule": true
  }
}